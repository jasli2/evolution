<% provide(:title, current_user.admin? ? "考试管理" : "考试中心") %>
<% provide(:page_title, current_user.admin? ? "考试管理" : "考试中心") %>
<% provide(:page_sub_title, current_user.admin? ? "管理所有考试" : "查看考试") %>
<% provide(:page_icon, "iconfa-certificate") %>

<% content_for :breadcrumbs do %>
<%= content_tag(:li, current_user.admin? ? "考试管理" : "考试中心") %>
<% end %>

<% content_for :javascript do %>

<% end %>

<div class="row-fluid">
  <div id="dashboard-left" class="span8">
    <h4 class="widgettitle">所有考试（<%= @exams.size %>）</h4>
    <% if @exams.size > 0 %>
    <div class="widgetcontent nopadding">
      <table class="table responsive tp-list">
        <% @exams.each do |e| %>
        <tr>
          <td><span class="label label-info"><%= exam_progress(e.state) %></span></td>
          <td>
            <% if current_user.admin? %>
              <%= link_to e.title, examination_path(e) %>
              <span>参考总人数: <%=e.users.size %></span>
              <span>考试日期：<%= e.published_at ? e.published_at.to_date : "待定 " %></span>
              <span>结束日期：<%= e.deadline ? e.deadline.to_date : "待定" %></span>
              <span><%= link_to exam_state(e.state), exam_state_action(e, current_user), :class => "btn btn-warning" %></span>
            <% else %>
              <%= link_to "<i class='iconfa-check'></i> 报名考试".html_safe, '#myModal', :class => "btn btn-warning disabled", "data-toggle" => "modal" %>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
    </div>
    <% else %>
    <div class='widgetcontent'>
      <p>还没有任何考试安排</p>
    </div>
    <% end %>
  </div>
  <div id="dashboard-right" class="span4">
    <% if current_user.admin? %>
    <h3 class="subtitle">管理考试</h3>
    <div class="divider15"></div>
    <div class="well">
      <a href="<%= new_examination_path %>" data-toggle="modal" class="btn btn-primary"><i class="iconfa-plus icon-white"></i> 创建新考试</a>
    </div>
    <% end %>
  </div>
</div>