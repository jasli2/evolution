<% provide(:title, current_user.admin? ? "考试管理" : "考试中心") %>
<% provide(:page_title, current_user.admin? ? "考试管理" : "考试中心") %>
<% provide(:page_sub_title, current_user.admin? ? "管理所有考试" : "查看考试") %>
<% provide(:page_icon, "iconfa-certificate") %>

<% content_for :breadcrumbs do %>
<%= content_tag(:li, current_user.admin? ? "考试管理" : "考试中心") %>
<% end %>

<% content_for :javascript do %>

<% end %>

<div class="row-fluid">
  <div id="dashboard-left" class="span8">
    <h4 class="widgettitle">所有考试（<%= @exams.size %>）</h4>
    <% if @exams.size > 0 %>
    <div class="widgetcontent nopadding">
      <ul class="exam-list">
        <% @exams.each do |e| %>
        <li>
          <%= e.title %>
          <span class="pull-right">
            <% if current_user.admin? %>
            <%= link_to "<i class='iconfa-edit'></i> 查看详情".html_safe, examination_path(e), :class => "btn btn-warning" %>
            <% else %>
            <%= link_to "<i class='iconfa-check'></i> 报名考试".html_safe, "#", :class => "btn btn-warning disabled" %>
            <% end %>
          </span>
        </li>
        <% end %>
      </ul>
    </div>
    <% end %>
  </div>
  <div id="dashboard-right" class="span4">
    <% if current_user.admin? %>
    <h3 class="subtitle">管理考试</h3>
    <div class="divider15"></div>
    <div class="well">
      <a href="<%= new_examination_path %>" class="btn btn-primary"><i class="iconfa-plus icon-white"></i> 创建新考试</a>
    </div>
    <% end %>
  </div>
</div>