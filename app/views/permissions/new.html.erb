<% provide(:title, "创建用户权限") %>
<% provide(:page_title, "创建用户权限") %>
<% provide(:page_sub_title, "创建用户权限") %>
<% provide(:page_icon, "iconfa-edit") %>

<% content_for :breadcrumbs do %>
<li><%= link_to "权限管理", permissions_path %> <span class="separator"></span></li>
<%= content_tag(:li, "创建用户权限") %>
<% end %>

<% content_for :javascript do %>

<% end %>

<div class="row-fluid">
  <div id="dashboard-left" class="span8">
    <h4 class="widgettitle">创建用户权限</h4>
    <div class="widgetcontent">
      <div class="divider15"></div>
        <%= simple_form_for(@authority, :url => permissions_path, :method => :post, :html => {:class => 'form-horizontal'}) do |f| %>
        <%= f.input :role, collection: @role_list, :label => "角色" %>
        <%= f.input :model_name, collection: @model_list, :label => "模块" %>
        <%= f.input :create_permit, collection: @scope_list, :label => "创建权" %>
        <%= f.input :read_permit, collection: @scope_list, :label => "查阅权" %>
        <%= f.input :edit_permit, collection: @scope_list, :label => "修改权" %>
        <div class="form-actions">
        <%= f.button :submit, 'Submit', :class => "btn-primary"  %>
        </div>
        <% end %>
    </div>
  </div>
  <div id="dashboard-right" class="span4">
    
  </div>
</div>